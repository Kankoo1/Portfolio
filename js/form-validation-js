function formValidation()
{
var fname = document.validation.firstName;
var lname = document.validation.lastName;
var uadd = document.validation.address;
var ucountry = document.validation.country;
var uzip = document.validation.zip;
var uemail = document.validation.email;
var umsex = document.validation.msex;
var ufsex = document.validation.fsex; if(userid_validation(uid,5,12))
{
if(allLetter(fname))
{
if(allLetter(lname))
{
if(alphanumeric(uadd))
{ 
if(countryselect(ucountry))
{
if(allnumeric(uzip))
{
if(ValidateEmail(uemail))
{
if(validsex(umsex,ufsex))
{
}
} 
}
} 
}
}
}
}
return false;
}

function allLetter(fname)   { 
var firstletters = /^[A-Za-z]+$/;
if(fname.value.match(firstletters))
{
return true;
}
else {
alert('first Name must have alphabet characters only');
fname.focus();
return false;
}
}

function lLetter(lname)   { 
var lastletters = /^[A-Za-z]+$/;
if(lname.value.match(lastletters))
{
return true;
}
else
{
alert('last Name must have alphabet characters only');
lname.focus();
return false;
}
}